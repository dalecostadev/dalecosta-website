---
interface Props {
    title?: string;
    description?: string;
}
const { title, description } = Astro.props;

import { SEO } from "astro-seo";
---

<SEO
    title={title || "Nicolò Costantini"}
    description={description || "Nicolò Costantini is a DevOps Engineer from Italy."}
    twitter={{
        creator: "@dalecosta1"
    }}
    canonical="https://dalecosta.com"
    extend={{
        link: [
            { rel: "icon", href: "/favicon.png" },
            { rel: "sitemap", href: "/sitemap-index.xml" }
        ],
        meta: [
            { name: "instagram:title", content: title || "Dalecosta" },
            { name: "instagram:description", content: description || "Dalecosta is a DevOps Engineer from Italy." },
            { name: "viewport", content: "width=device-width, initial-scale=1"},
            { name: "theme-color", content: "#3498db"}
        ],
    }}
/>
