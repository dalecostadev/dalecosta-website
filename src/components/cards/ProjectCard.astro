---
interface Props {
    id: string;
    title: string;
    description: string;
    companyName?: string;
    companyUrl?: string;
}
const { id, title, description, companyName, companyUrl } = Astro.props;
---

<div id={`component_${id}`} class="project-card bg-gray-300 dark:bg-gray-800 p-3 rounded-md shadow mb-4">
    <h4 class="text-lg font-semibold mb-2">
        {title}
        <span class="hidden sm:inline font-normal">&bull;</span>
        {companyName && (
            <a href={companyUrl} target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:text-blue-700">
                {companyName}
            </a>
        )}
    </h4>
    <p class="text-sm sm:text-base">
        {description}
    </p>
</div>
