---
interface Props {
    name: string;
    icon: string;
}
const { name, icon } = Astro.props;

import { Icon } from 'astro-icon/components';
---
<div class="flex-grow min-h-16 focus:outline-none transition duration-300 ease-in-out transform hover:scale-105 p-3 rounded-md bg-gray-300 dark:bg-gray-800 text-black dark:text-white shadow flex items-center">
    <Icon name={icon} class="fill-gray-800 dark:fill-white h-[1.8em] w-[1.8em] mr-2" />
    <span class="font-medium">{name}</span>
</div>
